<%= form_for @content do |f| %>

<p>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<% if @content.errors.any? %>
	<%= @content.errors.messages[:title][0] %>
	<% end %>
</p>

<p>
	<%= f.label :video_url_1 %>
	<%= f.text_field :video_url_1 %>
	<%= f.label :video_url_2 %>
	<%= f.text_field :video_url_2 %>
</p>

<p>
	<%= f.label :embed_url_1 %>
	<%= f.text_field :embed_url_1 %>
	<%= f.label :embed_url_2 %>
	<%= f.text_field :embed_url_2 %>
</p>

<p>
	<%= f.submit %>
</p>

<% end %>